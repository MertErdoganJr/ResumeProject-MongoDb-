@model Testimonial

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h1>Create Testimonial</h1>

<form method="post">
    <label>Name Surname</label>
    <input type="text" asp-for="NameSurname" class="form-control" />
    <br />
    <label>Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Comment</label>
    <input type="text" asp-for="Comment" class="form-control" />
    <br />
    <button class="btn btn-primary">Add New Testimonial</button>
</form>


