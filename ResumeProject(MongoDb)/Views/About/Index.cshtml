@model List<ResumeProject_MongoDb_.DAL.Entities.About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<br /><br />
<div>
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Title</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach(var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Delete</a></td>
                <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-success">Update</a></td>
            </tr>
        }
    </table>
    <a href="/About/CreateAbout/" class="btn btn-primary">New Person</a>
</div>