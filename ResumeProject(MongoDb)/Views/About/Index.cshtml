@model List<ResumeProject_MongoDb_.DAL.Entities.About>

@{
    Layout = null;
}

<br /><br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Hakkımızda Başlık</th>
            <th>Hakkımızda Açıklama</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.AboutID</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Sil</a></td>
                <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/About/CreateAbout/" class="btn btn-primary">Yeni Hakkımızda Yazısı</a>
</div>