@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<br />
<br />
<div>
    <table class="table table-hover">
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Detele</th>
            <th>Update</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.NameSurname</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td>
                <td>
                    <a class="btn btn-outline-info" data-toggle="modal" data-target="#messageModal-@item.ContactID">
                        <i class="fas fa-comment"></i> Show Message
                    </a>

                    <div class="modal fade" id="messageModal-@item.ContactID" tabindex="-1" role="dialog" aria-labelledby="#messageModal-@item.ContactID .modal-header h5" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="messageModalLabel-@item.ContactID">Message</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>@item.Message</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                <td><a href="/Contact/DeleteContact/@item.ContactID/" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </table>
</div>